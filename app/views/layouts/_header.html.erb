<header class="mb-4" data-controller='header'>
  <div class="bg-black py-2 pt-4">
    <a href="/" class="nav-link">
      <h1 class="text-center fw-bold fst-italic text-light">Film Tracker</h1>
    </a>
  </div>

  <nav class="navbar navbar-expand-lg navbar-dark bg-black">
    <div class="container-fluid">
      <div class="collapse navbar-collapse justify-content-md-center" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Movies', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Search', '#', class: 'nav-link', data: { action: 'click->header#showSearch' } %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'New Movie', new_movie_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Edit Profile', profiles_edit_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
            <%= link_to 'Exit', destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link btn' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="bg-black pb-3 d-none" data-header-target="searchForm">
    <div class="container w-50">
      <%= form_with url: search_movies_path, class: 'd-flex' do |f| %>
        <div class="input-group input-group-sm">
          <%= f.text_field :search, type: 'search', class: 'form-control me-1', placeholder: 'Search...' %>
          <%= f.submit 'Search', class: 'btn btn-outline-light' %>
        </div>
      <% end %>
    </div>
  </div>
</header>
