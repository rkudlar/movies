<header class="mb-4">
  <div class="bg-black py-2 pt-4">
    <a href="/" class="nav-link">
      <h1 class="text-center fw-bold fst-italic text-light">Film Tracker</h1>
    </a>
  </div>

  <nav class="navbar navbar-expand-lg navbar-dark bg-black">
    <div class="container-fluid">
      <div class="collapse navbar-collapse justify-content-md-center" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Movies', root_path, class: 'nav-link' %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'New Movie', new_movie_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Exit', destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link btn' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
