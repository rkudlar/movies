<div class="container">
  <div class="row justify-content-center align-items-center mt-5">
    <div class="col-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'needs-validation') do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-floating my-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'user@example.com' %>
          <%= f.label :email %>
        </div>
        <div class="form-floating my-3">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control', placeholder: 'username' %>
          <%= f.label :username %>
        </div>
        <div class="form-floating my-3">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'password' %>
          <%= f.label :password %>
        </div>
        <div class="form-floating my-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'confirm password' %>
          <%= f.label :password_confirmation %>
        </div>
        <div class="actions my-3">
          <%= f.submit "Sign up", class: 'btn btn-lg btn-dark' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
