<div class="container">
  <div class="row justify-content-center align-items-center mt-5">
    <div class="col-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-floating my-3">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'form-control', placeholder: 'username' %>
          <%= f.label :username %>
        </div>
        <div class="form-floating my-3">
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'password' %>
          <%= f.label :password %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox my-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions my-3">
          <%= f.submit "Log in", class: 'btn btn-lg btn-dark' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
