<%= form_with model: @user, url: profiles_update_path do |f| %>
  <div class="form-group row">
    <%= f.label :first_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10 my-1">
      <%= f.text_field :first_name, class: 'form-control' %>
      <div class="invalid-feedback">Please input value</div>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10 my-1">
      <%= f.text_field :last_name, class: 'form-control' %>
      <div class="invalid-feedback">Please input value</div>
    </div>
  </div>

  <div class="form-group row my-1">
    <%= f.label :avatar, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10 my-1">
      <%= f.file_field :avatar, class: 'form-control form-control-file' %>
    </div>
    <div class="invalid-feedback">Please select image</div>
  </div>

  <div class="form-group row">
    <%= f.label :current_password, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10 my-1">
      <%= f.password_field :current_password, class: 'form-control' %>
      <div class="invalid-feedback">Please input value</div>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10 my-1">
      <%= f.password_field :password, class: 'form-control' %>
      <div class="invalid-feedback">Please input value</div>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10 my-1">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <div class="invalid-feedback">Please input value</div>
    </div>
  </div>
  <%= f.submit class: 'btn btn-dark mb-3' %>
<% end %>
